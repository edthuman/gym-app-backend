{
    "GET /api": {
        "description": "serves a json representation of available endpoints"
    },
    "GET /api/users": {
        "description": "serves all users",
        "queries": [ "order", "sort", "username" ],
        "example response": { 
            "users": [
                {
                    "_id": "1",
                    "username": "goodUsername"
                },
                {
                    "_id": "2",
                    "username": "badUsername"
                }
            ]
        }
    },
    "GET /api/users/:user-id": {
        "description": "serves the user with the given id",
        "example response": { 
            "user": {
                    "username": "goodUsername",
                    "exercises": [
                        "Pull Up",
                        "Leg Press"
                    ]
            }
        }
    },
    "POST /api/users": {
        "description": "adds a given user object, returns the added user object",
        "example response": {
            "user": {
                "_id": "3",
                "username": "new_user"
            }
        }
    },
    "GET /api/exercises": {
        "description": "serves all exercises",
        "queries": [ "order", "sort", "name" ],
        "example response": {
            "exercises": [
                {
                    "_id": "1",
                    "name": "Pull Up",
                    "description": "pull yourself up",
                    "icon": "pull-up"
                },
                {
                    "_id": "2",
                    "name": "Chin Up",
                    "description": "chin yourself up",
                    "icon": "chin-up"
                }
            ]
        }
    },
    "POST /api/exercises": {
        "description": "adds a given exercise object, returns the added exercise object",
        "example response": {
            "exercise": {
                    "_id": "3",
                    "name": "New Exercise",
                    "description": "description of exercise",
                    "icon": "new-exercise"
            }
        }
    },
    "GET /api/diaries": {
        "description": "serves all diary objects",
        "queries": [ "sort", "order", "username", "exercise" ],
        "example response": {
            "diaries": [
                {
                    "_id": "1",
                    "username": "goodUsername",
                    "exercise": "Pull up",
                    "personalBest": 4,
                    "goal": 10,
                    "logs": [
                        {
                            "date": "20-08-2024",
                            "log": 10
                        }
                    ]


                },
                {
                    "_id": "2",
                    "username": "badUsername",
                    "exercise": "Chin Up",
                    "personalBest": 4,
                    "goal": 10,
                    "logs": [
                        {
                            "date": "20-08-2024",
                            "log": 40
                        }
                    ]
                }
            ]
        }
    },
    "POST /api/diaries": {
        "description": "adds a given diary, returns the added object",
        "example response": {
            "diary": {
                "_id": "3",
                "username": "goodUsername",
                "exercise": "Chin up",
                "personalBest": 8,
                "goal": 10,
                "logs": [
                    {
                        "date": "20-08-2024",
                        "log": 10
                    }
                ]
            }
        }
    },
    "GET /api/diaries/:diary_id": {
        "description": "serves the diary object with given _id",
        "queries": [],
        "example response": {
            "diary": {
                "_id": "1",
                "username": "goodUsername",
                "exercise": "Pull up",
                "personalBest": 10,
                "goal": 12,
                "logs": [
                    {
                        "date": "20-08-2024",
                        "log": 10
                    }
                ]
            }
        }
    },
    "PATCH /api/diaries/:diary_id": {
        "description": "serves the updated diary object",
        "queries": [],
        "example response": {
            "diary": {
                "_id": "1",
                "username": "goodUsername",
                "exercise": "Pull up",
                "personalBest": 11,
                "goal": 12,
                "logs": [
                    {
                        "date": "20-08-2024",
                        "log": 10
                    },
                    {
                        "date": "21-08-2024",
                        "log": 11
                    }
                ]
            }
        }
    },
    "DELETE /api/diaries/:diary_id": {
        "description": "deletes the diary object with given _id, serves no response",
        "queries": [],
        "example response": {}
    }
}